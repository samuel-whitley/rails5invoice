<%=form_for @order, :html => {class: "form-horizontal-center well"} do |f| %>

<div class="form-group">
<div class="row">
  <div class="col-xs-4">
      <%=f.label :customer%>
      <%=f.text_field :customer, class: "form-control"%>
    </div>
  </div>

  <%=f.fields_for :products do |ff|%>

  <div class="product_list">
    <div class="col-xs-4">
        <%=ff.label :quantity %>
        <%=ff.text_field :quantity, class: "form-control quantity tbag"%>
    </div>

    <div class="col-xs-4">
        <%=ff.label :price%>
        <%=ff.text_field :price, class: "form-control price tbag"%>
    </div>

    <div class="col-xs-4">
        <%=ff.label :name%>
        <%=ff.text_field :name, class: "form-control tags"%>
    </div>
   </div>
<%end%>

<div class="row">
  <div class="col-xs-offset-8 col-xs-2">
      <%=f.label :total%>
      <%=f.text_field :total, class: "form-control", id:"total"%>
    </div>
  </div>

<div class="row">
  <a class="btn btn-default btn-primary buttonss col-xs-2", id="addItems">Add Item</a>
    <div class="">
      <%=f.submit class: "btn btn-default btn-primary buttonss  col-xs-offset-8 col-xs-2"%>
    </div>
</div>
<%end%>


</div>
