<%@orders.each do |order|%>

    <div class="well col-md-offset-2 col-md-8">
      Customer: <%=order.customer%>
      <%=link_to "View Order", order_path(order), class: "btn btn-default btn-primary pull-right"%>
      <div class="">
        <h4 class"text-center"> Order Items </h3>
        <%order.products[0..4].each do |product|%>
        <ul class="text-center">
          <li><%=link_to(product) do%>
            <%=product.name%>
          </li>
          <%end%>
        </ul>
        <%end%>
      </div>
         Total: <%=order.total || 0%>

        <%=link_to "Edit Order", edit_order_path(order), class: "btn btn-default btn-primary pull-right hidden-xs	hidden-sm"%>
    </div>

<%end%>
